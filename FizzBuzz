// FizzBuzz
// Bud Robertson

// Challenge 1 - FizzBuzz for numbers between 1 and 100 (20 times)
for _ in 1...20 {
  let randomNumber = Int.random(in: 1...100)
  switch randomNumber {
    case let x where x % 3 == 0 && x % 5 == 0:
      print("FizzBuzz")
    case let x where x % 3 == 0:
      print("Fizz")
    case let x where x % 5 == 0:
      print("Buzz")
    default:
      print(randomNumber)
  }
}

